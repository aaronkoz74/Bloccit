<div class="row">
  <div class="col-md-8">
    <div class="media">
      <br/>
      <% avatar_url = @user.avatar_url(128) %>
      <% if avatar_url %>
        <div class="media-left">
          <%= image_tag avatar_url, class: 'media-object' %>
        </div>
      <% end %>
      <div class="media-body">
        <% if no_posts_or_comments? %>
          <h3 class="media-heading"><%= @user.name %> has not submitted any posts or comments yet.</h3>
        <% else %>
          <h2 class="media-heading"><%= @user.name%></h2>
          <small>
            <%= pluralize(@user.posts.count, 'post') %>,
            <%= pluralize(@user.comments.count, 'comment') %>
          </small>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% unless no_posts_or_comments? %>
  <h2>Posts</h2>
  <%= render @user.posts %>

  <h2>Comments</h2>
  <%= render @user.comments %>
  <% end %>
  <h2>Favorites</h2>
  <%= render partial: 'favorites/favorite_post', collection: @user.favorite_posts, as: :post %>
